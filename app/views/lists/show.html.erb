<br>
<h2> Gift List for: <%= @list.name %> </h2>
<br>
<table class="table table-striped">
    <thead>
        <tr>
            <th> Gift </th>
        </tr>
    </thead>

    <tbody>
        <% @list.gifts.each do |g| %>
            <tr>
                <td><%= link_to g.name, list_gift_path(@list, g) %></td>
            </tr>
        <% end %>
    </tbody>
</table>
<br>
<br>

    <p><%= link_to "Add a New Gift", new_list_gift_path(@list) %></p>

