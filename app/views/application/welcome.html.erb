<div class="mx-auto" style="width: 300px;">
    <h1>Gift List Helper</h1>
</div>

    <% if user_signed_in?%>
<br>
<br>
<br>
    <div class="mx-auto" style="width: 200px;">
        <a class="btn btn-lg btn-outline-primary btn-block text-uppercase" href="/lists" role="button">View Gift Lists</a>
        <a class="btn btn-lg btn-outline-primary btn-block text-uppercase" href="/gifts/new" role="button">Create a Gift List</a>
    </div>
    <% else %>
    <br>
    <div class="mx-auto" style="width: 500px;">
        <h3><%= link_to "Sign Up", new_user_registration_path %> or
        <%= link_to "Login", new_user_session_path %> <br><br> to start being an organized gift giver!</h3>
    <% end %>
</div>

